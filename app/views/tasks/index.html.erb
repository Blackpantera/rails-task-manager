<p id="notice"><%= notice %></p>

<h1>My Tasks</h1>

<table>
  <thead>
    <tr>
<!--       <th>Title</th>
      <th>Details</th>
      <th>Compleated</th>
      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box("tag", task.compleated, {checked: true}) %></td>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.compleated %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

